<h1><%= @event.name %></h1>

<h2>第三步</h2>

<%= form_for @registration, :url => update_step3_event_registration_path(@event, @registration) do |f| %>

  <div class="form-group">
    <%= f.label :网址 %>
    <%= f.url_field :website, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :博客 %>
    <%= f.text_area :bio, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= link_to "上一步", step2_event_registration_path(@event, @registration), :class => "btn btn-default" %>
    <%= f.submit "确定", :class => "btn btn-primary" %>
  </div>

<% end %>